<div class="btn-create">
  <a href="/mantRegions/saveRegion" class="btn btn-secondary">Create</a>
</div>
<div class="container">
  {{#each regions}}
        <div class="card">
          <div class="card-body-region">
            <p>{{this.name}}</p>
          </div>
          <div class="buttons">
            <a href="/mantRegions/editRegion/{{this.id}}" class="btn btn-light">Edit</a>
            <a href="/mantRegions/confirm/{{this.id}}" class="btn btn-secondary">Delete</a>
          </div>
        </div>
  {{/each}}
</div>